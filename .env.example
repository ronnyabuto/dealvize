# =============================================================================
# Dealvize CRM - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://dealvize.vercel.app
NEXT_PUBLIC_VERCEL_ENV=production

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email confirmation (true/false)
NEXT_PUBLIC_EMAIL_CONFIRMATION=false

# -----------------------------------------------------------------------------
# Stripe Payment Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_starter_monthly
NEXT_PUBLIC_STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly
STRIPE_STARTER_PRICE_ID=price_starter_monthly
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_FREE_TESTING=true
ENABLE_FREE_TESTING=true
ENABLE_BETA_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=false

# -----------------------------------------------------------------------------
# Email Configuration (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# SMS Configuration (Twilio)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://yourdomain.com/api/webhooks/twilio

# -----------------------------------------------------------------------------
# MLS Integration
# -----------------------------------------------------------------------------
MLS_API_URL=https://api.mls.com
MLS_CLIENT_ID=your_mls_client_id
MLS_CLIENT_SECRET=your_mls_client_secret
RAPIDAPI_KEY=your_rapidapi_key

# -----------------------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------------------
# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Microsoft
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Apple
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# -----------------------------------------------------------------------------
# Redis/Upstash (Rate Limiting & Caching)
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# -----------------------------------------------------------------------------
# Database Pool Configuration
# -----------------------------------------------------------------------------
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=60000
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_CRON_SCHEDULE=0 2 * * *
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_ENCRYPTION_KEY=your_32_char_encryption_key_here

# Backup Retention (in days)
DAILY_BACKUP=true
DAILY_BACKUP_RETENTION=7
WEEKLY_BACKUP=true
WEEKLY_BACKUP_RETENTION=30
MONTHLY_BACKUP=true
MONTHLY_BACKUP_RETENTION=365

# Backup Notifications
BACKUP_NOTIFY_SUCCESS=false
BACKUP_NOTIFY_FAILURE=true
BACKUP_NOTIFICATION_EMAIL=admin@yourdomain.com
BACKUP_NOTIFICATION_WEBHOOK=https://yourdomain.com/api/webhooks/backup

# Backup Storage Options
LOCAL_BACKUP_ENABLED=true
LOCAL_BACKUP_PATH=/var/backups/dealvize
SUPABASE_BACKUP_ENABLED=true
GOOGLE_DRIVE_BACKUP_ENABLED=false
GOOGLE_DRIVE_BACKUP_FOLDER_ID=your_folder_id
GOOGLE_DRIVE_BACKUP_FOLDER_NAME=Dealvize Backups

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=true
LOG_FILE_PATH=/var/log/dealvize
LOG_CONSOLE=true
LOG_REMOTE=false
LOG_REMOTE_ENDPOINT=https://yourdomain.com/api/logs
LOG_SANITIZE=true
LOG_INCLUDE_STACK=true

# -----------------------------------------------------------------------------
# Security & Session Configuration
# -----------------------------------------------------------------------------
VALIDATE_SESSION_IP=false
VALIDATE_SESSION_USER_AGENT=true

# -----------------------------------------------------------------------------
# Cron Jobs
# -----------------------------------------------------------------------------
CRON_SECRET=your_random_cron_secret_key_here

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Sentry)
# -----------------------------------------------------------------------------
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# -----------------------------------------------------------------------------
# Site Verification (SEO)
# -----------------------------------------------------------------------------
GOOGLE_SITE_VERIFICATION=your_google_verification_code
YAHOO_SITE_VERIFICATION=your_yahoo_verification_code
YANDEX_VERIFICATION=your_yandex_verification_code

# -----------------------------------------------------------------------------
# Vercel Environment
# -----------------------------------------------------------------------------
VERCEL_ENV=development
